[flake8]
# Configuration for SIRAJ Educational AI Platform
# Exclude archived directories and build artifacts

exclude = 
    _archived_for_cleanup,
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .tox,
    .eggs,
    *.egg,
    node_modules

# Standard error codes for CI
select = E9,F63,F7,F82

# Maximum line length
max-line-length = 127

# Maximum complexity
max-complexity = 10

# Show source code for errors
show-source = True

# Show statistics
statistics = True